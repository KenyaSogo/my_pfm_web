<h1>SimulationSummaryByAssetType Detail</h1>

<% has_sum_asset_type_dailies = @summary_by_asset_type.sum_asset_type_dailies.present? %>

<p>
  <%= search_form_for(@query, url: @summary_by_asset_type) do |f| %>
    <table>
      <tr>
        <td><strong>IsActive:</strong>
        <td><%= @summary_by_asset_type.is_active.presence || '-' %>
      <tr>
        <td><strong>SummarizedAt:</strong>
        <td><%= display_datetime_string(@summary_by_asset_type.summarized_at) %>
      <% if has_sum_asset_type_dailies %>
        <tr>
          <td><strong>AssetTypeName:</strong>
          <td colspan="3"><%= f.select :asset_type_id_eq, summary_by_asset_type_options(@summary_by_asset_type) %>
        <tr>
          <td><strong><%= f.label :base_date, "BaseDate:" %></strong>
          <td><%= f.date_select :base_date_gteq, {include_blank: true, use_month_numbers: true, date_separator: ' / '}, class: "form-control" %> ~
          <td><%= f.date_select :base_date_lteq, {include_blank: true, use_month_numbers: true, date_separator: ' / '}, class: "form-control" %>
          <td width="300" align="right"><span class="actions"><%= f.submit "Search" %></span>
      <% end %>
    </table>
  <% end %>
</p>

<% if has_sum_asset_type_dailies %>
  <p>
    <%= area_chart @data, points: false, thousands: ',' %>
  </p>
<% end %>

<table>
  <tr>
    <td><strong>Memo:</strong>
    <td><%= @summary_by_asset_type.memo.presence || '-' %>
</table>

<br />

<%= link_to 'Edit', edit_summary_by_asset_type_path(@summary_by_asset_type) %> |
<%= link_to 'Back', @summary_by_asset_type.simulation_summary %>

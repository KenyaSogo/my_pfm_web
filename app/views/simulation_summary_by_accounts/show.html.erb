<h1>SimulationSummaryByAccount Detail</h1>

<p>
  <%= search_form_for(@query, url: @simulation_summary_by_account) do |f| %>
    <table>
      <tr>
        <td><strong>IsActive:</strong>
        <td><%= @simulation_summary_by_account.is_active.presence || '-' %>
      <tr>
        <td><strong>SummarizedAt:</strong>
        <td><%= display_datetime_string(@simulation_summary_by_account.summarized_at) %>
      <tr>
        <td><strong>AssetAccountName:</strong>
        <td><%= f.select :asset_account_id_eq, asset_account_options(@simulation_summary_by_account) %>
        <td width="300" align="right"><span class="actions"><%= f.submit "Search" %></span>
    </table>
  <% end %>
</p>

<p>
  <%= area_chart @data, points: false, thousands: ',' %>
</p>

<br />


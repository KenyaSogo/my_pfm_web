<p id="notice"><%= notice %></p>

<h1>Assets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @assets.blank? %>
      <tr>
        <td><%= user_display_name(current_user) %></td>
        <td colspan="3">-</td>
      </tr>
    <% else %>
      <% @assets.each do |asset| %>
        <tr>
          <td><%= user_display_name(asset.user) %></td>
          <td><%= link_to 'Show', asset %></td>
          <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
          <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


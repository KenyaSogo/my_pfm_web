<h1>New Asset</h1>

</br>

<div class='row'>
  <div class='col-md-12'>
    <%= render 'devise/shared/error_messages', resource: @asset %>
  </div>
</div>

<p>
  <%= form_for @asset do |f| %>
    <div class='form-group row'>
      <div class='col-md-2'>
        <%= f.label :name, class: 'col-form-label' %>
      </div>
      <div class='col-md-5'>
        <%= f.text_field :name, placeholder: 'asset name', class: 'form-control' %>
      </div>
    </div>
    <br />
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</p>

<br />
<br />

<div class='btn-group' role='group' aria-label='footer_menu'>
  <%= link_to 'Back', assets_path, class: 'btn btn-secondary' %>
</div>

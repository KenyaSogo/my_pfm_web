<h1>Editing Simulation Entry</h1>

</br>

<div class='row'>
  <div class='col-md-12'>
    <%= render 'devise/shared/error_messages', resource: @simulation_entry %>
  </div>
</div>

<p>
  <%= form_for @simulation_entry do |f| %>
    <div class='form-group row'>
      <div class='col-md-2'>
        <%= f.label :name, class: 'col-form-label' %>
      </div>
      <div class='col-md-5'>
        <%= f.text_field :name, placeholder: 'simulation entry name', class: 'form-control' %>
      </div>
    </div>

    <% unless @simulation_entry.entry_type_any_time? %>
      <div class='form-group row'>
        <div class='col-md-2'>
          <%= f.label :apply_from, class: 'col-form-label' %>
        </div>
        <div class='col-md-5'>
          <%= f.text_field :apply_from, id: 'apply_from', autocomplete: 'off', class: 'form-control datetimepicker-input', data: { toggle: 'datetimepicker', target: '#apply_from' } %>
        </div>
      </div>
      <div class='form-group row'>
        <div class='col-md-2'>
          <%= f.label :apply_to, class: 'col-form-label' %>
        </div>
        <div class='col-md-5'>
          <%= f.text_field :apply_to, id: 'apply_to', autocomplete: 'off', class: 'form-control datetimepicker-input', data: { toggle: 'datetimepicker', target: '#apply_to' } %>
        </div>
      </div>
    <% end %>
    <br />
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</p>

<br />
<br />

<div class='btn-group' role='group' aria-label='footer_menu'>
  <%= link_to 'Show', @simulation_entry, class: 'btn btn-secondary' %>
  <%= link_to 'Back', @simulation_entry.simulation, class: 'btn btn-secondary' %>
</div>

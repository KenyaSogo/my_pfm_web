<h1>Editing Simulation Summary By Account</h1>

</br>

<div class='row'>
  <div class='col-md-12'>
    <%= render 'devise/shared/error_messages', resource: @simulation_summary_by_account %>
  </div>
</div>

<p>
  <%= form_for @simulation_summary_by_account do |f| %>
    <div class='form-group row'>
      <div class='col-md-2'>
        <%= f.label :is_active, class: 'form-check-label' %>
      </div>
      <div class='col-md-5 d-flex align-items-center'>
        <div class='custom-control custom-checkbox'>
          <%= f.check_box :is_active, class: 'custom-control-input' %>
          <%= f.label :is_active, class: 'custom-control-label text-muted' %>
        </div>
      </div>
    </div>
    <div class='form-group row'>
      <div class='col-md-2'>
        <%= f.label :memo, class: 'col-form-label' %>
      </div>
      <div class='col-md-5'>
        <%= f.text_area :memo, placeholder: 'memo text', rows: '5', class: 'form-control' %>
      </div>
    </div>
    <br />
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</p>

<br />
<br />

<div class='btn-group' role='group' aria-label='footer_menu'>
  <%= link_to 'Show', @simulation_summary_by_account, class: 'btn btn-secondary' %>
  <%= link_to 'Back', @simulation_summary_by_account.simulation_summary, class: 'btn btn-secondary' %>
</div>

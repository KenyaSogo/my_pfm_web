<!DOCTYPE html>
<html>
  <head>
    <title>MyPfmWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg fixed-top navbar-dark bg-primary'>
      <div class='container'>
        <a class='navbar-brand'>Futurama</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class='collapse navbar-collapse' id='navbar'>
          <ul class='navbar-nav mr-auto'>
            <% if user_signed_in? %>
              <li class='nav-item'><%= link_to 'home', homes_show_path, class: 'nav-link' %></li>
              <% if current_user.assets.present? %>
                <li class='nav-item'><%= link_to 'asset', asset_path(current_user.current_asset || current_user.assets.first, from_menu: true), class: 'nav-link' %></li>
                <% if current_user.current_asset.present? && current_user.current_asset.simulations.present? %>
                  <% simulation = current_user.current_simulation || current_user.current_asset.simulations.first %>
                  <li class='nav-item'><%= link_to 'simulation', simulation_path(simulation, from_menu: true), class: 'nav-link' %></li>
                  <% if simulation.simulation_summary.present? %>
                    <li class='nav-item'><%= link_to 'summary', simulation_summary_path(simulation.simulation_summary, from_menu: true), class: 'nav-link' %></li>
                  <% else %>
                    <li class='nav-item'>summary</li>
                  <% end %>
                <% else %>
                  <li class='nav-item'>simulation</li>
                  <li class='nav-item'>summary</li>
                <% end %>
              <% else %>
                <li class='nav-item'><%= link_to 'assets', assets_path, class: 'nav-link' %></li>
              <% end %>
            <% else %>
              <li class='nav-item'><%= link_to 'top', homes_index_path, class: 'nav-link' %></li>
            <% end %>
          </ul>

          <ul class='navbar-nav'>
            <% if user_signed_in? %>
              <li class='nav-item'><%= link_to 'edit profile', edit_user_registration_path, class: 'nav-link' %></li>
              <li class='nav-item'><%= link_to 'logout', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
            <% else %>
              <li class='nav-item'><%= link_to 'sign up', new_user_registration_path, class: 'nav-link' %></li>
              <li class='nav-item'><%= link_to 'log in', new_user_session_path, class: 'nav-link' %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class='container'>
      <p class='notice' id='notice'>
        <% if notice %>
          </br>
          <div class="alert alert-dismissible alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong><%= notice %></strong>
          </div>
        <% end %>
      </p>
      <p class='alert'>
        <% if alert %>
          </br>
          <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong><%= alert %></strong>
          </div>
        <% end %>
      </p>
      <%= yield %>
    </div>
  </body>
</html>
